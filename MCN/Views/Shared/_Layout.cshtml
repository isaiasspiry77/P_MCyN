    <!--script para poner en disabled el select el textarea y el boton si el articulo esta en revision-->
    <script>
        $(document).ready(function () {
            if ($("#esta").val() == 7) {
                var sino = $(this).val() == 'true' ? false : true;
                $("input[name=btnretro]").prop('disabled', sino);
                $("#esta").prop('disabled', sino);
                document.getElementById("textareaedi").disabled = true;
                var boton = document.getElementById("botonretro");
                boton.value = "Articulo en Revisión";
            }
        })
    </script>
    <!--script para cambiar los valores del boton y acerlos desabled junto con el textarea en retroalimentacion-->
    <script>
        $(document).ready(function () {
            $("#esta").change(function () {
                if ($("#esta").val() == 10) {
                    var boton = document.getElementById("botonretro");
                    boton.removeAttribute("disabled");
                    document.getElementById("textareaedi").disabled = false;
                    boton.value = "Rechazar Articulo";
                }
                if ($("#esta").val() == 8) {
                    var boton = document.getElementById("botonretro");
                    boton.removeAttribute("disabled");
                    document.getElementById("textareaedi").disabled = false;
                    boton.value = "Asignar Revisor";
                }
                if ($("#esta").val() == 7) {
                    var sino = $(this).val() == 'true' ? false : true;
                    $("input[name=btnretro]").prop('disabled', sino);

                    document.getElementById("textareaedi").disabled = true;
                }
            });
        });
    </script>

