@model IEnumerable<MCN.Models.Autores>

@{
    ViewData["Title"] = "ListadoAutores";
    ViewData["Tipo"] = ViewData["tipo"];
}

<!DOCTYPE html>



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listado</title>
</head>
<body>

    <div class="row">
        <h4>Autores Registrados</h4>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Información de lo Autores Activos Registrados en la pagina MCyN
                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreA)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ApellidosA)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CorreoElectronicoA)
                                </th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApellidosA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CorreoElectronicoA)
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@item.IdAutores">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>