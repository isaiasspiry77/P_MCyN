@model IEnumerable<MCN.Models.Personal>

@{
    ViewData["Title"] = "ListadoPersonal";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listado</title>
</head>
<body>

    <div class="row">
        <h4>Personal Registrado</h4>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Información del Personal de la Revista MCyN
                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreP)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ApellidoP)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CorreoElectronicoP)
                                </th>
                                <!--th>
                                Institución
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RExtencionesP)
                            </th-->
                                <th>
                                    @Html.DisplayNameFor(model => model.TipoP)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>

                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApellidoP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CorreoElectronicoP)
                                    </td>
                                    <!--td>
                                    @Html.DisplayFor(modelItem => item.RExtencionesPNavigation.RInstitucionesNavigation.NombreInstituto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RExtencionesPNavigation.NombreExtencion)
                                </td-->
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoPNavigation.TipoUsuarios)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusNavigation.DescEstados)
                                    </td>

                                    <td>
                                        <a asp-action="Detalles" asp-route-id="@item.IdPersonal"><i class="fa fa-list  "></i></a> |
                                        @if (item.StatusNavigation.IdEstado == 1)
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.IdPersonal"> <i class="fa fa-chevron-down"></i> </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Activate" asp-route-id="@item.IdPersonal"> <i class="fa fa-chevron-up"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <p>
        <a asp-action="RegistrarPersonal">Registrar Nuevo Personal</a>
    </p>

</body>
</html>
