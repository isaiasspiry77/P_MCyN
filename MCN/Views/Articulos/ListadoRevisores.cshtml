@model IEnumerable<MCN.Models.DetalleArticulos>

@{
    ViewData["Title"] = "ListadoArticulosRevisores";
    ViewData["Tipo"] = ViewData["tipo"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListadoRevisores</title>
</head>
<body>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Listado de articulos
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaRevision)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ComentariosRetroaliment)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdArticulo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdPersonal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaRevision)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ComentariosRetroaliment)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdArticuloNavigation.ComentariosAutor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdPersonalNavigation.ApellidoP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusNavigation.Lestados)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.IdDetalleArt"><i class="fa fa-pencil"></i></a>&nbsp;&nbsp;
                                        <a asp-action="Details" asp-route-id="@item.IdDetalleArt"><i class="fa fa-list"></i></a> &nbsp;&nbsp;
                                        <a asp-action="Delete" asp-route-id="@item.IdDetalleArt"> <i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
