@model IEnumerable<MCN.Models.DetalleArticulos>

@{
    ViewData["Title"] = "ListadoArticulosRevisores";
    ViewData["Tipo"] = ViewData["tipo"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListadoRevisores</title>
</head>
<body>
    <div class="row">
        <h4>Litado de Articulos</h4>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Listado de articulos Asignados para Revisión
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaRevision)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ComentariosRetroaliment)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @if (item.FechaRevision != null)
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaRevision)
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            En espera de Revisión
                                        </td>
                                    }
                                    @if (item.ComentariosRetroaliment != null)
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ComentariosRetroaliment)
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            En espera de Revisión
                                        </td>
                                    }
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusNavigation.DescEstados)
                                    </td>
                                    <td>
                                        <a asp-action="" asp-route-id="@item.IdDetalleArt"><i class="fa fa-pencil"></i></a>&nbsp;&nbsp;
                                        <a asp-action="DetalleArticuloRevisor" asp-route-id="@item.IdDetalleArt"><i class="fa fa-list"></i></a> &nbsp;&nbsp;
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
