@model IEnumerable<MCN.Models.Articulo>

@{
    ViewData["Title"] = "ListadoArticulos";
    ViewData["Tipo"] = ViewData["tipo"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListadoAceptados</title>
</head>
<body>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Articulos Aceptados
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TituloArticulo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaPublicacionA)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RutaDocumentoA)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RutaZipImagenesA)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ComentariosAutor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaEdicionA)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RAutor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TituloArticulo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaPublicacionA)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Articulos", "DownloadPdf", new { fullPath = (string)item.RutaDocumentoA }, new { @class = "btn btn-success btn-block fa fa-download " })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Imagenes", "DownloadZip", new { fullPath = (string)item.RutaZipImagenesA }, new { @class = "btn btn-success btn-block fa fa-download " })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ComentariosAutor)
                                        </td>
                                        @if (item.FechaEdicionA != null)
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaEdicionA)
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                Sin modificación
                                            </td>
                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RAutorNavigation.NombreA)
                                            @Html.DisplayFor(modelItem => item.RAutorNavigation.ApellidosA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StatusNavigation.DescEstados)
                                        </td>
                                        <td>
                                            <a asp-action="DetalleArticulo" asp-controller="Articulos" asp-route-id="@item.IdArticulo">Detalle del Articulo</a>

                                            <!--a asp-action="Delete" asp-route-id="@item.IdArticulo">Delete</a-->
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

                        <p>
                            <a asp-action="Listado"><button type="button" class="btn btn-default">Volver al listado</button></a>
                        </p>
</body>
</html>
