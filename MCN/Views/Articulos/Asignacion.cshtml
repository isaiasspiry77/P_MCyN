@model MCN.Models.Articulo

@{
    ViewData["Title"] = "AsignarArticulos";
    ViewData["Tipo"] = ViewData["tipo"];
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Asignacion</title>
</head>
<body>
    <div class="row">
        <h4>Asignación de Revisores</h4>
        <div class="col-lg-12">
            <hr />
            <div class="panel panel-default">
                <div class="panel-heading">
                    Información del Articulo
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TituloArticulo)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.TituloArticulo)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.RAutor)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.RAutorNavigation.NombreA)
                            @Html.DisplayFor(model => model.RAutorNavigation.ApellidosA)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.FechaPublicacionA)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.FechaPublicacionA)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ComentariosAutor)
                        </dt>
                        <dd align="justify">
                            @Html.DisplayFor(model => model.ComentariosAutor)
                        </dd>
                    </dl>

                    <form asp-action="Asignacion">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdArticulo" />

                        <div class="col-lg-3">
                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="Status" class="form-control" asp-items="ViewBag.Estados" id="esta"></select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label">Comentarios del Editor</label>
                                <textarea class="form-control" rows="5" id="textareaedi" name="textcoment"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Asignar Revisor" name="btnretro" class="btn btn-primary btn-success" id="botonretro" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div>
        <a asp-action="Listado"><button type="button" class="btn btn-default">Volver al listado</button></a>
    </div>

</body>
</html>
